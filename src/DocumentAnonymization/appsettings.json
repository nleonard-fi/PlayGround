{
  "ApiName": "Document Anonymization Api",
  "ConnectionStrings": {
    "EcmAppsDbConnection": ""
  },
  "MaxNumberOfRetriesOnDbTransientErrors": 5,
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async", "Serilog.Enrichers.Environment", "Serilog.Enrichers.Process" ],
    "MinimumLevel": {
      "Default": "Information", //"Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async", //https://github.com/serilog/serilog-sinks-async
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "D:\\AppLogs\\DocRouter\\DocumentAnonymizationApi\\AnonymizationApi-.txt",
                "outputTemplate": "{Timestamp:yyyy-MM-dd--HH:mm:ss.fffK} [{Level:u3}] ({MachineName})({ProcessId}) {Message} <s:{SourceContext}>{NewLine} {Exception}",
                //"formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog", // to output as JSON
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 1073741824, //default = 1GB = 1024 * 1024 * 1024,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 32 //default = 31
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName", "WithProcessId" ],
    "Properties": {
      "Application": "DocumentAnonymizationApi"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
